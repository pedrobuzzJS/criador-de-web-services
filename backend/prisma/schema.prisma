// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                  Int @id
  name                String
  email               String
  email_verified_at   String
  password            String
  remember_token      String
  created_at          String
  updated_at          String

  @@map("tbusuarios")
}

model Cores {
  id Int @id
  descricao String
  cor String
  created_at DateTime
  updated_at DateTime

  @@map("tbcores")
}

model Acoes {
  id Int @id
  descricao String
  metodo String
  created_at DateTime
  updated_at DateTime

  @@map("tbacoes")
}

model Menus {
  id Int @id
  descricao String
  icone String
  ordem Int
  desabilitado Boolean @default(false)
  pai_id Int
  acao_id Int

  @@map("tbmenus")
}